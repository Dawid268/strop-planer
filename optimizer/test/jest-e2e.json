{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/../src/$1",
    "^@config/(.*)$": "<rootDir>/../src/config/$1",
    "^@common/(.*)$": "<rootDir>/../src/common/$1",
    "^@shared/(.*)$": "<rootDir>/../src/shared/$1"
  },
  "setupFiles": ["<rootDir>/setup-env.ts"],
  "testTimeout": 30000,
  "maxWorkers": 1,
  "runInBand": true
}
